<h1><%= @assignment.title %></h1>
<p><%= link_to "View on GitHub", @assignment.repo_url %></p>
<p>Type: <%= @assignment.assignment_type %></p>

<%= link_to "Create new submission", new_assignment_submission_path(@assignment) %>

<% @assignment.submissions.each do |submission| %>
  <li><%= link_to submission.student["name"], assignment_submission_path(@assignment, submission) %></li>
<% end %>

